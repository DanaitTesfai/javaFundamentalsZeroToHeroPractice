package org.example;

import java.util.Scanner;

public class DataTypesPlayGround {
    public static void main(String[] args) {
        // Variable Declaration ----> includes two things 1. data type 2. variable name
        int age;  // Data-Type nameOfTheVariable; ex int x;  String name;
        String name;

        // Variables can also be declared and assigned at the same time
        double salary = 1500.00;
        boolean isMarried = false;


        age = 22;   // = is called assignment operator
        name = "Simon";

        System.out.println("Name: " + name);
        System.out.println("Age: " + age);
        System.out.println("Salary: " + salary);
        System.out.println("Marital Status:"  + (isMarried ? "Married" : "Single"));

        // Variable: Its value keeps on changing throughout the life of the program
        age = 25;
        System.out.println("Age: " + age);

        // We can grab different values from the console

        Scanner input = new Scanner(System.in);

        System.out.print("Enter your name:");
        name = input.nextLine();

        System.out.print("Enter your age:");
        age = input.nextInt();

        System.out.print("Are you married? ");
        isMarried = input.nextBoolean();

        System.out.print("Enter your salary: ");
        salary = input.nextDouble();

        System.out.println("Name: " + name);
        System.out.println("Age: " + age);
        System.out.println("Salary: " + salary);
        System.out.println("Marital Status:"  + (isMarried ? "Married" : "Single"));
    }
}